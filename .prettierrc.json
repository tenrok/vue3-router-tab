{
  "$schema": "https://json.schemastore.org/prettierrc",
  "arrowParens": "avoid",
  "semi": false,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "printWidth": 180,
  "tabWidth": 2,
  "trailingComma": "none",
  "vueIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "singleAttributePerLine": false
      }
    }
  ]
}